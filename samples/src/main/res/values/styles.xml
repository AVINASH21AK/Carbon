<resources>

    <style name="DropDownTheme" parent="carbon_Theme.Dark.DropDownPopup">
        <item name="colorPrimary">@color/carbon_amber_400</item>
        <item name="colorPrimaryDark">@color/carbon_amber_700</item>
        <item name="colorAccent">@color/carbon_cyan_a400</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="carbon_Theme.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/carbon_amber_700</item>
        <item name="colorPrimary">@color/carbon_amber_400</item>
        <item name="colorPrimaryDark">@color/carbon_amber_700</item>
        <item name="colorAccent">@color/carbon_cyan_a400</item>
        <item name="carbon_dropDownPopupTheme">@style/DropDownTheme</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="carbon_Theme.Dark.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/carbon_amber_400</item>
        <item name="colorPrimaryDark">@color/carbon_amber_700</item>
        <item name="colorAccent">@color/carbon_cyan_a400</item>
    </style>

    <style name="RaisedButtonStyle" parent="AppTheme">
        <item name="colorPrimaryDark">#ff9C27B0</item>
        <item name="colorPrimary">#ff9C27B0</item>
        <item name="colorAccent">#ffFF5252</item>
    </style>

    <style name="calcButtonStyle" parent="carbon_Button.Flat">
        <item name="carbon_rippleColor">#42ffffff</item>
        <item name="carbon_rippleStyle">borderless</item>
        <item name="carbon_rippleHotspot">false</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="carbon_fontPath">"carbon/Roboto-Light.ttf"</item>
    </style>

    <style name="calcButtonStyle2" parent="calcButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="carbon_fontPath">"carbon/Roboto-Regular.ttf"</item>
    </style>

    <style name="sectionDescription">
        <item name="android:textAppearance">?attr/carbon_textAppearanceCaption</item>
        <item name="android:layout_marginLeft">@dimen/carbon_margin</item>
        <item name="android:layout_marginRight">@dimen/carbon_margin</item>
        <item name="android:layout_marginTop">@dimen/carbon_marginHalf</item>
        <item name="android:layout_marginBottom">@dimen/carbon_marginHalf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
